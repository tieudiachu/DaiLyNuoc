@using QLDaiLy.Models
@{
    ViewBag.Title = "Trang chủ";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Images/carousel1.jpg" width=100% alt="New York">
                <div class="carousel-caption">
                    <h3>Bia</h3>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/carousel2.jpg" width=100% alt="Chicago">
                <div class="carousel-caption">
                    <h3>Nước suối</h3>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/carousel3.jpg" width=100% alt="Los Angeles">
                <div class="carousel-caption">
                    <h3>Nước ngọt</h3>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>




<div class="col-md-4 col-sm-4 col-lg-4">
    @Html.Action("LoaiSP", "Home")
</div>
<div class="col-md-8 col-sm-8 col-lg-8">
    <h2>DANH SÁCH SẢN PHẨM</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-lg-6 col-md-6">
                    <div class="thumbnail">
                        <a href="@Url.Action("Details", "SanPham", new { id = item.MaSP})">
                            <img src="~/Images/@item.HinhAnh" alt="@item.TenSP" style="height:300px;width:300px;">
                        </a>
                        <div class="caption">
                            <h4 class="text-center">
                                <a href="@Url.Action("Details", "SanPham", new { id = item.MaSP })">@item.TenSP</a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
            <a href="@Url.Action("Index", "SanPham")">Xem thêm</a>
        </div>
    </div>
</div>
